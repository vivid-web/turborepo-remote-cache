{
	"name": "@turborepo-remote-cache/api",
	"description": "The API layer for the Turborepo remote cache",
	"keywords": [
		"Turborepo",
		"cache",
		"remote",
		"api"
	],
	"author": "Peter van Meijgaard <peter@vivid-web.com>",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "tsc --project tsconfig.build.json",
		"dev": "tsc --project tsconfig.build.json --watch",
		"serve": "node ./scripts/serve.js",
		"lint": "eslint --cache --cache-location .cache/eslint .",
		"typecheck": "tsc --noEmit",
		"format": "prettier --cache --cache-location .cache/prettier --check ."
	},
	"dependencies": {
		"@hono/zod-validator": "^0.7.3",
		"@netlify/functions": "^4.2.5",
		"@t3-oss/env-core": "^0.13.8",
		"@turborepo-remote-cache/auth": "workspace:*",
		"@turborepo-remote-cache/core": "workspace:*",
		"@turborepo-remote-cache/db": "workspace:*",
		"hono": "^4.9.8",
		"hono-pino": "^0.10.2",
		"pino": "^9.9.5",
		"pino-pretty": "^13.1.1",
		"remeda": "^2.31.1",
		"std-env": "^3.9.0",
		"stoker": "^2.0.1",
		"zod": "^4.1.9"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@hono/node-server": "^1.19.3",
		"@turborepo-remote-cache/eslint-config": "workspace:*",
		"@turborepo-remote-cache/prettier-config": "workspace:*",
		"@turborepo-remote-cache/tsconfig": "workspace:*",
		"@types/node": "^22.18.6",
		"dotenv": "^17.2.2",
		"eslint": "^9.35.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2"
	},
	"prettier": "@turborepo-remote-cache/prettier-config"
}
